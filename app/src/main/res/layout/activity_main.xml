<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.github.edsonmoreno.www.minitenis.MainActivity"
    android:background="@color/negro">

    <TextView
        android:id="@+id/titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/manzana"
        tools:layout_editor_absoluteY="76dp"
        tools:layout_editor_absoluteX="121dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="61dp" />

    <Button
        android:id="@+id/new_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titulo"
        android:layout_marginTop="80dp"
        android:layout_toLeftOf="@+id/titulo"
        android:layout_toStartOf="@+id/titulo"
        android:onClick="newGame"
        android:text="@string/juego_nuevo" />

    <Button
        android:id="@+id/puntajes_Altos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/new_game"
        android:layout_alignStart="@+id/new_game"
        android:layout_below="@+id/new_game"
        android:layout_marginTop="38dp"
        android:onClick="highScore"
        android:text="@string/altos_puntajes" />

    <Button
        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="44dp"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="14dp"
        android:onClick="dameInfo"
        android:text="@string/acerca_de" />
</RelativeLayout>
